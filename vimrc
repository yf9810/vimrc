set number
syntax on
set norelativenumber
set cursorline
set wildmenu

set showmode
set t_Co=256
set autoindent
set tabstop=2
set wrap
set linebreak
set wrapmargin=2

set hlsearch
exec "nohlsearch"
set incsearch
set ignorecase
set smartcase

set mouse=a
colorscheme gruvbox   " 新的颜色主题
set bg=dark             " 新的主题设置成黑色
